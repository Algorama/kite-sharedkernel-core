<?xml version="1.0"?>
<hibernate-configuration xmlns="urn:nhibernate-configuration-2.2">
  <session-factory>

    <!-- configurations -->
    <property name="connection.driver_class">NHibernate.Driver.Sql2008ClientDriver</property>
    <property name="dialect">NHibernate.Dialect.MsSql2008Dialect</property>
    <property name="connection.connection_string">
      Server=(local);initial catalog=SharedKernel.Test;persist security info=True;Integrated Security=SSPI;
    </property>
    
    <!-- Mostra SQL gerado pelo NHiberante no Console.Out -->
    <property name="show_sql">true</property>

    <!-- Timeout dos Comandos -->
    <property name="command_timeout">10</property>

    <!-- Substituições das queries HQL  -->
    <property name="query.substitutions">true 1, false 0, yes 'Y', no 'N'</property>

    <!-- É uma verificação do NH que valida se os métodos estão marcados como virtual -->
    <property name="use_proxy_validator">false</property>

    <!-- o ADO.NET tem uma propriedade que acumula sentenças até um número, para então envia-las  -->
    <property name="adonet.batch_size">10</property>

    <!-- Classe que faz o gerenciamento das Sessões do NHibernate -->
    <property name="current_session_context_class">NHibernate.Context.ManagedWebSessionContext</property>

    <!-- Registrando os Assemblies que contém os mapeamentos -->
    <mapping assembly="SharedKernel.Test"/>
    <mapping assembly="SharedKernel.Domain"/>

  </session-factory>
</hibernate-configuration>